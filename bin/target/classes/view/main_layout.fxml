<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controller.MainController">
   <top>
      <BorderPane style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <left>
            <Label text="E-Learning Platform" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </left>
         <right>
             <VBox alignment="CENTER_RIGHT" spacing="5">
                <Label fx:id="usernameLabel" text="User: Guest" textFill="WHITE" />
                <Button text="Logout" onAction="#handleLogout" style="-fx-font-size: 10px;"/>
             </VBox>
         </right>
      </BorderPane>
   </top>
   <center>
      <SplitPane fx:id="mainSplitPane" dividerPositions="0.25">
         <items>
            <ScrollPane fitToWidth="true">
               <content>
                  <VBox fx:id="courseListContainer" spacing="5.0" style="-fx-padding: 10;">
                     <Label text="Available Courses" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                     <!-- Courses will be added here dynamically -->
                  </VBox>
               </content>
            </ScrollPane>
            <StackPane fx:id="contentArea">
               <children>
                  <Label text="Select a course to begin" textFill="#95a5a6">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
