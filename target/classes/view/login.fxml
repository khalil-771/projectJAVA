<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.app.controller.LoginController"
      prefWidth="1280" prefHeight="800">
    
    <!-- Left Side - Decorative Panel -->
    <VBox HBox.hgrow="ALWAYS" alignment="CENTER" spacing="30"
          style="-fx-background-color: #667eea;">
        
        <!-- Decorative Circles -->
        <StackPane>
            <Pane prefWidth="500" prefHeight="600">
                <Circle centerX="100" centerY="150" radius="120" 
                        fill="rgba(255, 255, 255, 0.1)" stroke="rgba(255, 255, 255, 0.2)" strokeWidth="2"/>
                <Circle centerX="350" centerY="300" radius="180" 
                        fill="rgba(255, 255, 255, 0.08)" stroke="rgba(255, 255, 255, 0.15)" strokeWidth="2"/>
                <Circle centerX="200" centerY="450" radius="100" 
                        fill="rgba(255, 255, 255, 0.1)" stroke="rgba(255, 255, 255, 0.2)" strokeWidth="2"/>
                
                <!-- Center Content -->
                <VBox alignment="CENTER" layoutX="50" layoutY="200" spacing="20" prefWidth="400">
                    <Label text="ðŸ“š" style="-fx-font-size: 80px;"/>
                    <Label text="DevQuiz" 
                           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Apprenez, Testez, Progressez" 
                           style="-fx-font-size: 18px; -fx-text-fill: rgba(255,255,255,0.9);"/>

                </VBox>
            </Pane>
        </StackPane>
        
    </VBox>
    
    <!-- Right Side - Login Form -->
    <VBox HBox.hgrow="ALWAYS" alignment="CENTER" spacing="30" 
          style="-fx-background-color: #f8f9fa; -fx-padding: 60;">
        
        <VBox alignment="CENTER" spacing="25" maxWidth="400">
            
            <!-- Header -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Bienvenue!" 
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="Connectez-vous Ã  votre compte" 
                       style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>
            
            <!-- Form -->
            <VBox spacing="20" style="-fx-padding: 20 0;">
                
                <!-- Username -->
                <VBox spacing="8">
                    <Label text="Nom d'utilisateur" 
                           style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: 600;"/>
                    <TextField fx:id="usernameField" 
                              promptText="Entrez votre nom d'utilisateur"
                              style="-fx-background-color: white; 
                                     -fx-background-radius: 8; 
                                     -fx-padding: 14 16;
                                     -fx-font-size: 14px;
                                     -fx-border-color: #dfe6e9;
                                     -fx-border-width: 1.5;
                                     -fx-border-radius: 8;"
                              prefWidth="400"/>
                </VBox>
                
                <!-- Password -->
                <VBox spacing="8">
                    <Label text="Mot de passe" 
                           style="-fx-font-size: 13px; -fx-text-fill: #34495e; -fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" 
                                  promptText="Entrez votre mot de passe"
                                  style="-fx-background-color: white; 
                                         -fx-background-radius: 8; 
                                         -fx-padding: 14 16;
                                         -fx-font-size: 14px;
                                         -fx-border-color: #dfe6e9;
                                         -fx-border-width: 1.5;
                                         -fx-border-radius: 8;"
                                  prefWidth="400"/>
                </VBox>
                
                <!-- Error Label -->
                <Label fx:id="errorLabel" text="" wrapText="true" 
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 13px;"/>
                
                <!-- Login Button -->
                <Button text="Se connecter" 
                        onAction="#handleLogin"
                        defaultButton="true"
                        maxWidth="Infinity"
                        style="-fx-background-color: #667eea; 
                               -fx-text-fill: white; 
                               -fx-font-size: 15px; 
                               -fx-font-weight: bold; 
                               -fx-padding: 14 0;
                               -fx-background-radius: 8;
                               -fx-cursor: hand;"/>
                
                <!-- Divider -->
                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0;">
                    <Separator prefWidth="170"/>
                    <Label text="ou" style="-fx-text-fill: #95a5a6; -fx-font-size: 12px;"/>
                    <Separator prefWidth="170"/>
                </HBox>
                
                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Pas de compte?" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
                    <Hyperlink text="S'inscrire gratuitement" 
                              onAction="#goToRegister"
                              style="-fx-text-fill: #667eea; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
            
            
        </VBox>
        
        <!-- Footer -->

        
    </VBox>
    
</HBox>
