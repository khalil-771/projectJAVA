<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.app.controller.QuizHistoryController"
      spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5">
            <Label text="ðŸ“œ Quiz History" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Track your learning progress over time" style="-fx-text-fill: #666;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="10">
            <Label text="Filter:"/>
            <ComboBox fx:id="filterCombo" prefWidth="150"/>
            <Button text="ðŸ”„ Refresh" onAction="#refreshHistory"/>
        </HBox>
    </HBox>
    
    <!-- Stats Cards -->
    <HBox spacing="15" alignment="CENTER">
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 150;">
            <Label text="Total Quizzes" style="-fx-text-fill: #666;"/>
            <Label fx:id="totalQuizzesLabel" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        </VBox>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 150;">
            <Label text="Average Score" style="-fx-text-fill: #666;"/>
            <Label fx:id="averageScoreLabel" text="0%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
        </VBox>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-min-width: 150;">
            <Label text="Best Score" style="-fx-text-fill: #666;"/>
            <Label fx:id="bestScoreLabel" text="0%" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
        </VBox>
    </HBox>
    
    <!-- History Table -->
    <VBox spacing="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
        <Label text="Recent Attempts" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
            <placeholder>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="ðŸ“" style="-fx-font-size: 48px;"/>
                    <Label text="No quiz history yet" style="-fx-font-size: 16px; -fx-text-fill: #999;"/>
                    <Label text="Complete quizzes to see your progress here!" style="-fx-text-fill: #999;"/>
                </VBox>
            </placeholder>
        </TableView>
    </VBox>
    
</VBox>
