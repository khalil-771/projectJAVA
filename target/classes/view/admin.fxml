<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.app.controller.AdminController" 
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <Label text="âš™ï¸ Admin Panel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Manage questions, badges, and users" style="-fx-text-fill: #666;"/>
    
    <TabPane fx:id="adminTabs" VBox.vgrow="ALWAYS">
        <tabs>
            <!-- Questions Management -->
            <Tab text="ðŸ“ Questions" closable="false">
                <content>
                    <VBox spacing="15" style="-fx-padding: 15;">
                        <HBox spacing="10">
                            <Button text="âž• Add Question" onAction="#addQuestion" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                            <Button text="ðŸ—‘ï¸ Delete Selected" onAction="#deleteQuestion" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
                            <Button text="ðŸ”„ Refresh" onAction="#refreshData"/>
                        </HBox>
                        
                        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                            <Label text="Add New Question" style="-fx-font-weight: bold;"/>
                            <TextArea fx:id="questionTextArea" promptText="Enter question text..." prefRowCount="3"/>
                            <HBox spacing="10">
                                <VBox spacing="5">
                                    <Label text="Language:"/>
                                    <ComboBox fx:id="languageCombo" prefWidth="150"/>
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="Difficulty:"/>
                                    <ComboBox fx:id="difficultyCombo" prefWidth="150"/>
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="Points:"/>
                                    <TextField fx:id="pointsField" text="10" prefWidth="80"/>
                                </VBox>
                            </HBox>
                        </VBox>
                        
                        <TableView fx:id="questionsTable" VBox.vgrow="ALWAYS">
                            <placeholder>
                                <Label text="No questions yet"/>
                            </placeholder>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            
            <!-- Badges Management -->
            <Tab text="ðŸ† Badges" closable="false">
                <content>
                    <VBox spacing="15" style="-fx-padding: 15;">
                        <Label text="Badge List" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <TableView fx:id="badgesTable" VBox.vgrow="ALWAYS">
                            <placeholder>
                                <Label text="Loading badges..."/>
                            </placeholder>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
            
            <!-- Analytics -->
            <Tab text="ðŸ“Š Analytics" closable="false">
                <content>
                    <VBox spacing="15" style="-fx-padding: 15;" alignment="CENTER">
                        <Label text="Analytics Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="Coming soon: User statistics, quiz completion rates, popular languages, etc."/>
                    </VBox>
                </content>
            </Tab>
        </tabs>
    </TabPane>
    
    <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px;"/>
    
</VBox>
