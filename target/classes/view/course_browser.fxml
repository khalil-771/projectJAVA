<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controller.CourseBrowserController">
    <BorderPane>
        <top>
            <VBox style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 1 0;" spacing="5">
                <Label fx:id="courseTitleLabel" text="Titre du Cours">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>
                <Button text="Essayer le Code" fx:id="tryItButton" onAction="#openEditor" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                <Button text="Passer le Quiz" onAction="#openQuiz" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" />
            </VBox>
        </top>
        <center>
            <SplitPane dividerPositions="0.3">
                <items>
                    <TreeView fx:id="hierarchyTree" />
                    <WebView fx:id="lessonWebView" />
                </items>
            </SplitPane>
        </center>
    </BorderPane>
</StackPane>
